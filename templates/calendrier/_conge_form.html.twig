<div class="p-6">
    <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">
            {% if isEdit %}Modifier le congé{% else %}Nouveau congé{% endif %}
        </h3>
        <button @click="$dispatch('close-modal')" class="text-gray-400 hover:text-gray-500">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div>
                {{ form_label(form.dateDebut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.dateDebut, {'attr': {'class': 'w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500'}}) }}
                {{ form_errors(form.dateDebut) }}
            </div>
            <div>
                {{ form_label(form.dateFin, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.dateFin, {'attr': {'class': 'w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500'}}) }}
                {{ form_errors(form.dateFin) }}
            </div>
        </div>

        <div>
            {{ form_label(form.commentaire, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.commentaire, {'attr': {'class': 'w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500'}}) }}
            {{ form_errors(form.commentaire) }}
        </div>

        <div class="flex items-center justify-between pt-4 border-t">
            {% if isEdit %}
                <form action="{{ path('app_calendrier_conge_delete', {id: conge.id}) }}"
                      method="post"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce congé ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conge.id) }}">
                    <button type="submit" class="text-red-600 hover:text-red-700 text-sm font-medium">
                        Supprimer
                    </button>
                </form>
            {% else %}
                <div></div>
            {% endif %}

            <div class="flex gap-3">
                <button type="button"
                        @click="$dispatch('close-modal')"
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                    Annuler
                </button>
                <button type="submit"
                        class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
                    {% if isEdit %}Enregistrer{% else %}Créer{% endif %}
                </button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
