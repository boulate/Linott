{% if app.request.headers.get('HX-Request') %}
{# Update navigation buttons (out-of-band swap) - only for HTMX requests #}
<button id="btn-today"
        hx-swap-oob="true"
        hx-get="{{ path('app_compta') }}"
        hx-target="#fiche-container"
        hx-push-url="true"
        class="mr-2 p-2 text-gray-400 hover:text-primary-600 hover:bg-gray-100 rounded"
        title="Aujourd'hui">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
    </svg>
</button>

<button id="btn-precedent"
        hx-swap-oob="true"
        hx-get="{{ path('app_compta', {date: previousDate}) }}"
        hx-target="#fiche-container"
        hx-push-url="true"
        class="btn btn-secondary">
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Precedent
</button>

<button id="btn-suivant"
        hx-swap-oob="true"
        hx-get="{{ path('app_compta', {date: nextDate}) }}"
        hx-target="#fiche-container"
        hx-push-url="true"
        class="btn btn-secondary">
    Suivant
    <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
</button>

{# Update date header with datepicker #}
<div id="date-picker" hx-swap-oob="true" class="w-72 text-center" x-data="{ showPicker: false }">
    <h2 id="current-date" class="text-xl font-semibold text-gray-700 cursor-pointer hover:text-primary-600"
        @click="showPicker = !showPicker">
        {{ date|format_datetime('full', 'none', locale='fr')|capitalize }}
    </h2>
    <div x-show="showPicker" @click.away="showPicker = false" class="relative">
        <input type="date"
               value="{{ date|date('Y-m-d') }}"
               class="absolute top-0 left-1/2 transform -translate-x-1/2 mt-2 form-input"
               @change="window.location.href = '/compta/' + $event.target.value">
    </div>
</div>
{% endif %}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Main content - Daily periods #}
    <div class="lg:col-span-2">
        <div class="card">
            <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                <h3 class="text-lg font-medium text-gray-900">
                    Periodes du jour
                </h3>
                <div class="flex items-center space-x-2">
                    <form hx-post="{{ path('app_compta_copy', {date: date|date('Y-m-d')}) }}"
                          hx-target="#fiche-container"
                          hx-swap="innerHTML">
                        <button type="submit" class="btn btn-secondary text-sm">
                            Copier jour precedent
                        </button>
                    </form>
                    {# Dropdown for loading day templates #}
                    <div class="relative" x-data="{ open: false }">
                        <button type="button"
                                @click="open = !open"
                                class="btn btn-secondary text-sm inline-flex items-center">
                            Charger modele
                            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div x-show="open"
                             @click.away="open = false"
                             x-transition:enter="transition ease-out duration-100"
                             x-transition:enter-start="transform opacity-0 scale-95"
                             x-transition:enter-end="transform opacity-100 scale-100"
                             x-transition:leave="transition ease-in duration-75"
                             x-transition:leave-start="transform opacity-100 scale-100"
                             x-transition:leave-end="transform opacity-0 scale-95"
                             class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg z-20 border border-gray-200 py-1">
                            {% if jourTypes is defined and jourTypes|length > 0 %}
                                {% for jourType in jourTypes %}
                                    <form hx-post="{{ path('app_compta_apply_jour_type', {id: jourType.id, date: date|date('Y-m-d')}) }}"
                                          hx-target="#fiche-container"
                                          hx-swap="innerHTML"
                                          class="block">
                                        <button type="submit"
                                                @click="open = false"
                                                class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center justify-between">
                                            <span>
                                                {{ jourType.nom }}
                                                {% if jourType.isGlobal %}
                                                    <span class="text-xs text-gray-400">(partage)</span>
                                                {% endif %}
                                            </span>
                                            <span class="text-xs text-gray-500 font-mono">{{ jourType.totalFormatted }}</span>
                                        </button>
                                    </form>
                                {% endfor %}
                                <div class="border-t border-gray-100 mt-1 pt-1">
                                    <a href="{{ path('app_jour_type_index') }}"
                                       hx-boost="false"
                                       class="block px-4 py-2 text-sm text-primary-600 hover:bg-gray-100">
                                        Gerer mes modeles
                                    </a>
                                </div>
                            {% else %}
                                <span class="block px-4 py-2 text-sm text-gray-500">Aucun modele</span>
                                <a href="{{ path('app_jour_type_new') }}"
                                   hx-boost="false"
                                   class="block px-4 py-2 text-sm text-primary-600 hover:bg-gray-100">
                                    Creer un modele
                                </a>
                            {% endif %}
                        </div>
                    </div>
                    <button hx-get="{{ path('app_compta_periode_new', {date: date|date('Y-m-d')}) }}"
                            hx-target="#modal-container"
                            hx-swap="innerHTML"
                            class="btn btn-primary text-sm">
                        + Ajouter
                    </button>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Debut</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fin</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Section</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Axe 1</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Axe 2</th>
                            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Duree</th>
                            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                            <th class="px-4 py-3"></th>
                        </tr>
                    </thead>
                    <tbody id="periodes-list" class="bg-white divide-y divide-gray-200">
                        {% for periode in periodes %}
                            {% include 'compta/_periode_row.html.twig' %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="px-4 py-8 text-center text-gray-500">
                                    Aucune periode saisie pour cette journee
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot class="bg-gray-50">
                        <tr>
                            <td colspan="5" class="px-4 py-3 text-right text-sm font-bold text-gray-900">
                                Total journee :
                            </td>
                            <td class="px-4 py-3 text-right text-sm font-bold text-gray-900">
                                {{ totalHeures }}
                            </td>
                            <td colspan="2" class="px-4 py-3">
                                <form hx-post="{{ path('app_compta_validate_day', {date: date|date('Y-m-d')}) }}"
                                      hx-target="#fiche-container"
                                      hx-swap="innerHTML"
                                      class="flex justify-end">
                                    <button type="submit" class="text-xs text-primary-600 hover:text-primary-800 font-medium">
                                        Valider journee
                                    </button>
                                </form>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    {# Sidebar - Week summary #}
    <div class="lg:col-span-1">
        <div class="card">
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <button hx-get="{{ path('app_compta', {date: weekData.startOfWeek|date_modify('-1 day')|date('Y-m-d')}) }}"
                            hx-target="#fiche-container"
                            hx-push-url="true"
                            class="p-1 text-gray-400 hover:text-gray-600">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                    </button>
                    <h3 class="text-sm font-medium text-gray-900">
                        Semaine {{ weekData.startOfWeek|date('W') }}, <span class="text-gray-400">du {{ weekData.startOfWeek|date('d/m') }} au {{ weekData.endOfWeek|date('d/m') }}</span>
                    </h3>
                    <button hx-get="{{ path('app_compta', {date: weekData.endOfWeek|date_modify('+1 day')|date('Y-m-d')}) }}"
                            hx-target="#fiche-container"
                            hx-push-url="true"
                            class="p-1 text-gray-400 hover:text-gray-600">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="p-4">
                <ul class="space-y-2">
                    {% for day in weekData.days %}
                        {% set isSelected = day.date|date('Y-m-d') == date|date('Y-m-d') %}
                        <li class="flex items-center justify-between py-2 px-3 rounded-lg
                            {% if isSelected %}bg-primary-50 border border-primary-200{% elseif day.isWeekend %}bg-gray-50{% endif %}">
                            <div class="flex items-center gap-2">
                                <a href="{{ path('app_compta', {date: day.date|date('Y-m-d')}) }}"
                                   hx-get="{{ path('app_compta', {date: day.date|date('Y-m-d')}) }}"
                                   hx-target="#fiche-container"
                                   hx-push-url="true"
                                   class="text-sm font-medium {% if isSelected %}text-primary-700{% else %}text-gray-700{% endif %} hover:underline">
                                    {{ day.date|format_datetime(pattern='EEEE', locale='fr')|capitalize }}
                                    <span class="text-gray-500 font-normal">{{ day.date|date('d/m') }}</span>
                                </a>
                                {% if day.isToday %}
                                <svg class="w-4 h-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                {% endif %}
                            </div>
                            <div class="flex items-center">
                                <a href="{{ path('app_compta', {date: day.date|date('Y-m-d')}) }}"
                                   hx-get="{{ path('app_compta', {date: day.date|date('Y-m-d')}) }}"
                                   hx-target="#fiche-container"
                                   hx-push-url="true"
                                   class="text-sm font-semibold {% if day.totalMinutes == 0 %}text-gray-400{% elseif day.isFullyValidated %}text-green-600{% else %}text-amber-500{% endif %} hover:underline">
                                    {{ day.total }}
                                </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>

                <div class="mt-4 pt-4 border-t border-gray-200">
                    <div class="flex items-center justify-between">
                        <span class="text-sm font-bold text-gray-900">Total semaine</span>
                        <span class="text-lg font-bold text-primary-600">{{ weekData.weekTotal }}</span>
                    </div>
                    <form hx-post="{{ path('app_compta_validate_week', {date: date|date('Y-m-d')}) }}"
                          hx-target="#fiche-container"
                          hx-swap="innerHTML"
                          class="mt-3">
                        <button type="submit" class="w-full btn btn-secondary text-sm">
                            Valider la semaine
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
