<tr class="hover:bg-gray-50">
    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
        {{ periode.heureDebut|date('H:i') }}
    </td>
    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
        {{ periode.heureFin|date('H:i') }}
    </td>
    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border"
              style="{{ periode.section.couleurStyle }}">
            {{ periode.section.code }}
        </span>
        <span class="text-gray-500 ml-1">{{ periode.section.libelle }}</span>
    </td>
    <td class="px-4 py-3 whitespace-nowrap text-sm">
        {% if periode.axe1 %}
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium border"
                  style="{{ periode.section.couleurStyle }}">
                {{ periode.axe1.code }}
            </span>
        {% else %}
            <span class="text-gray-300">-</span>
        {% endif %}
    </td>
    <td class="px-4 py-3 whitespace-nowrap text-sm">
        {% if periode.axe2 %}
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium border"
                  style="{{ periode.section.couleurStyle }}">
                {{ periode.axe2.code }}
            </span>
        {% else %}
            <span class="text-gray-300">-</span>
        {% endif %}
    </td>
    <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-medium text-gray-900">
        {{ periode.dureeFormatted }}
    </td>
    <td class="px-4 py-3 whitespace-nowrap text-center">
        {% if periode.validee %}
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                Validee
            </span>
        {% else %}
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                Brouillon
            </span>
        {% endif %}
    </td>
    <td class="px-4 py-3 whitespace-nowrap text-right text-sm font-medium">
        <div class="flex items-center justify-end space-x-2">
            <button hx-get="{{ path('app_compta_periode_edit', {id: periode.id}) }}"
                    hx-target="#modal-container"
                    hx-swap="innerHTML"
                    class="text-primary-600 hover:text-primary-900">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </button>
            <form hx-post="{{ path('app_compta_periode_delete', {id: periode.id}) }}"
                  hx-target="#fiche-container"
                  hx-swap="innerHTML"
                  hx-confirm="Supprimer cette periode ?">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ periode.id) }}">
                <button type="submit" class="text-red-600 hover:text-red-900">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                </button>
            </form>
        </div>
    </td>
</tr>
