<div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity z-40"
     x-data="{ open: true }"
     x-show="open"
     x-transition:enter="ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0">
</div>

<div class="fixed inset-0 z-50 overflow-y-auto"
     x-data="{ open: true }"
     x-show="open"
     @keydown.escape.window="document.getElementById('modal-container').innerHTML = ''">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
             x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95">

            {{ form_start(form, {attr: {
                class: 'space-y-4',
                'hx-post': form.vars.action,
                'hx-target': hxTarget|default('#fiche-container'),
                'hx-swap': 'innerHTML',
                'hx-on::after-request': "if(event.detail.successful && event.detail.requestConfig.verb === 'post') document.getElementById('modal-container').innerHTML = ''",
                'onkeydown': "if(event.key === 'Enter' && event.target.tagName !== 'TEXTAREA') { event.preventDefault(); this.requestSubmit(); }",
                'x-data': 'periodeAxesSelector(' ~ ({
                    sections: axesData.sections,
                    axes1: axesData.axes1,
                    axes2: axesData.axes2,
                    axes3: axesData.axes3,
                    initialSection: form.section.vars.value|default(''),
                    initialAxe1: form.axe1.vars.value|default(''),
                    initialAxe2: form.axe2.vars.value|default(''),
                    initialAxe3: form.axe3.vars.value|default('')
                }|json_encode|raw) ~ ')'
            }}) }}

            <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                <h3 class="text-lg font-semibold leading-6 text-gray-900 mb-4">
                    {% if isEdit %}Modifier la periode{% else %}Nouvelle periode{% endif %}
                </h3>

                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div>
                        {{ form_label(form.heureDebut, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                        {{ form_widget(form.heureDebut) }}
                        {{ form_errors(form.heureDebut) }}
                    </div>
                    <div>
                        {{ form_label(form.heureFin, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                        {{ form_widget(form.heureFin) }}
                        {{ form_errors(form.heureFin) }}
                    </div>
                </div>

                {# Section #}
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-3">Section</label>
                    <div class="relative">
                        <select name="{{ form.section.vars.full_name }}"
                                x-model="selectedSection"
                                @change="onSelectSection($event.target.value)"
                                class="form-select w-full">
                            <option value="">-- Choisir une section --</option>
                            {% for section in axesData.sections %}
                                <option value="{{ section.id }}">{{ section.code }} - {{ section.libelle }}</option>
                            {% endfor %}
                        </select>
                        <div x-show="selectedSection" class="absolute right-8 top-1/2 -translate-y-1/2 text-green-500 pointer-events-none">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                    {{ form_errors(form.section) }}
                </div>

                {# Axe 1 #}
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-3">Axe 1</label>
                    <div class="relative">
                        <select name="{{ form.axe1.vars.full_name }}"
                                x-model="selectedAxe1"
                                @change="onSelectAxe1($event.target.value)"
                                x-ref="axe1Select"
                                class="form-select w-full">
                            <option value="">-- Choisir un axe 1 --</option>
                            {% for axe1 in axesData.axes1 %}
                                <option value="{{ axe1.id }}" data-section="{{ axe1.sectionId }}">{{ axe1.code }} - {{ axe1.libelle }}</option>
                            {% endfor %}
                        </select>
                        <div x-show="selectedAxe1" class="absolute right-8 top-1/2 -translate-y-1/2 text-green-500 pointer-events-none">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                    {{ form_errors(form.axe1) }}
                </div>

                {# Axe 2 #}
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-3">Axe 2</label>
                    <div class="relative">
                        <select name="{{ form.axe2.vars.full_name }}"
                                x-model="selectedAxe2"
                                @change="onSelectAxe2($event.target.value)"
                                x-ref="axe2Select"
                                class="form-select w-full">
                            <option value="">-- Choisir un axe 2 --</option>
                            {% for axe2 in axesData.axes2 %}
                                <option value="{{ axe2.id }}" data-axe1="{{ axe2.axe1Id }}">{{ axe2.code }} - {{ axe2.libelle }}</option>
                            {% endfor %}
                        </select>
                        <div x-show="selectedAxe2" class="absolute right-8 top-1/2 -translate-y-1/2 text-green-500 pointer-events-none">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                    {{ form_errors(form.axe2) }}
                </div>

                {# Axe 3 #}
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-3">Axe 3</label>
                    <div class="relative">
                        <select name="{{ form.axe3.vars.full_name }}"
                                x-model="selectedAxe3"
                                @change="onSelectAxe3($event.target.value)"
                                x-ref="axe3Select"
                                class="form-select w-full">
                            <option value="">-- Choisir un axe 3 --</option>
                            {% for axe3 in axesData.axes3 %}
                                <option value="{{ axe3.id }}" data-axe2="{{ axe3.axe2Id }}">{{ axe3.code }} - {{ axe3.libelle }}</option>
                            {% endfor %}
                        </select>
                        <div x-show="selectedAxe3" class="absolute right-8 top-1/2 -translate-y-1/2 text-green-500 pointer-events-none">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                    {{ form_errors(form.axe3) }}
                </div>

                <div>
                    {{ form_label(form.commentaire, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                    {{ form_widget(form.commentaire) }}
                    {{ form_errors(form.commentaire) }}
                </div>

                {# Mark axes fields as rendered since we handle them manually #}
                {% do form.section.setRendered() %}
                {% do form.axe1.setRendered() %}
                {% do form.axe2.setRendered() %}
                {% do form.axe3.setRendered() %}

                {{ form_rest(form) }}
            </div>

            <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                <button type="submit" class="btn btn-primary sm:ml-3">
                    {% if isEdit %}Modifier{% else %}Ajouter{% endif %}
                </button>
                <button type="button"
                        class="btn btn-secondary mt-3 sm:mt-0"
                        onclick="document.getElementById('modal-container').innerHTML = ''">
                    Annuler
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
