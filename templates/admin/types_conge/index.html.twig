{% extends 'base.html.twig' %}

{% block title %}Types de congés - Administration - Linott{% endblock %}

{% block body %}
{% include 'components/_navbar.html.twig' %}

<div class="container mx-auto px-4 py-6">
    {% include 'components/_flash_messages.html.twig' %}

    <div class="flex items-center justify-between mb-6">
        <div>
            <a href="{{ path('app_admin') }}" class="text-sm text-gray-500 hover:text-gray-700">&larr; Administration</a>
            <h1 class="text-2xl font-bold text-gray-900">Types de congés</h1>
        </div>
        <a href="{{ path('app_admin_types_conge_new') }}"
           class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors">
            + Nouveau type
        </a>
    </div>

    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">Code</th>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">Libellé</th>
                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">Couleur</th>
                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">Décompte</th>
                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">Statut</th>
                    <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for typeConge in typesConge %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">
                            <span class="font-mono font-medium text-gray-900">{{ typeConge.code }}</span>
                        </td>
                        <td class="px-4 py-3 text-gray-600">{{ typeConge.libelle }}</td>
                        <td class="px-4 py-3 text-center">
                            <span class="inline-block w-6 h-6 rounded" style="background-color: {{ typeConge.couleur }}"></span>
                        </td>
                        <td class="px-4 py-3 text-center">
                            {% if typeConge.decompte %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    Oui
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    Non
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-center">
                            {% if typeConge.actif %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Actif
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    Inactif
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-right">
                            <a href="{{ path('app_admin_types_conge_edit', {id: typeConge.id}) }}"
                               class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-4 py-8 text-center text-gray-500">
                            Aucun type de congé
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
