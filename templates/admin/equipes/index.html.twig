{% extends 'base.html.twig' %}

{% block title %}Equipes - Administration - Linott{% endblock %}

{% block body %}
{% include 'components/_navbar.html.twig' %}

<div class="container mx-auto px-4 py-6">
    {% include 'components/_flash_messages.html.twig' %}

    <div class="flex items-center justify-between mb-6">
        <div>
            <a href="{{ path('app_admin') }}" class="text-sm text-gray-500 hover:text-gray-700">&larr; Administration</a>
            <h1 class="text-2xl font-bold text-gray-900">Equipes</h1>
        </div>
        <a href="{{ path('app_admin_equipes_new') }}"
           class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors">
            + Nouvelle equipe
        </a>
    </div>

    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">Code</th>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">Nom</th>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">Membres</th>
                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">Statut</th>
                    <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for equipe in equipes %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">
                            {% if equipe.couleur %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded text-sm font-mono font-medium border"
                                      style="{{ equipe.couleurStyle }}">
                                    {{ equipe.code }}
                                </span>
                            {% else %}
                                <span class="font-mono text-gray-900">{{ equipe.code }}</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3">
                            <span class="font-medium text-gray-900">{{ equipe.nom }}</span>
                            {% if equipe.description %}
                                <p class="text-sm text-gray-500 truncate max-w-xs">{{ equipe.description }}</p>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3">
                            {% set userCount = equipe.users|length %}
                            {% if userCount > 0 %}
                                <div class="flex items-center gap-1">
                                    <span class="text-sm text-gray-600">{{ userCount }} membre{{ userCount > 1 ? 's' : '' }}</span>
                                    <div class="relative" x-data="{ show: false }">
                                        <button type="button" @mouseenter="show = true" @mouseleave="show = false"
                                                class="text-gray-400 hover:text-gray-600">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        </button>
                                        <div x-show="show" x-transition
                                             class="absolute z-10 left-0 mt-1 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-2">
                                            {% for user in equipe.users %}
                                                <div class="px-3 py-1 text-sm text-gray-700">{{ user.fullName }}</div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <span class="text-sm text-gray-400">Aucun membre</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-center">
                            {% if equipe.actif %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Active
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    Inactive
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="{{ path('app_admin_equipes_edit', {id: equipe.id}) }}"
                                   class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                                    Modifier
                                </a>
                                <form action="{{ path('app_admin_equipes_toggle', {id: equipe.id}) }}"
                                      method="post"
                                      class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ equipe.id) }}">
                                    <button type="submit"
                                            class="text-amber-600 hover:text-amber-700 text-sm font-medium">
                                        {% if equipe.actif %}Desactiver{% else %}Activer{% endif %}
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-4 py-8 text-center text-gray-500">
                            Aucune equipe
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
