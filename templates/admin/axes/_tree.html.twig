{# Tree component - displays the full hierarchy #}
<div id="tree-container" class="space-y-1">
    {% if tree.sections is empty and tree.independent.axe1 is empty and tree.independent.axe2 is empty and tree.independent.axe3 is empty %}
        <div class="px-4 py-8 text-center text-gray-500">
            {% if searchQuery is defined and searchQuery %}
                Aucun resultat pour "{{ searchQuery }}"
            {% else %}
                Aucune section ni axe configure
            {% endif %}
        </div>
    {% else %}
        {# Main tree: Sections and their descendants #}
        {% for sectionNode in tree.sections %}
            {% include 'admin/axes/_tree_node.html.twig' with {
                node: sectionNode,
                depth: 0
            } %}
        {% endfor %}

        {# Independent axes section #}
        {% if tree.independent.axe1 is not empty or tree.independent.axe2 is not empty or tree.independent.axe3 is not empty %}
            <div class="mt-6 pt-4 border-t border-gray-200">
                <div class="px-2 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                    Axes independants
                </div>

                {% if tree.independent.axe1 is not empty %}
                    <div class="ml-2">
                        <div class="text-xs text-gray-400 px-2 py-1">{{ axe_label('axe1') }}</div>
                        {% for axe1Node in tree.independent.axe1 %}
                            {% include 'admin/axes/_tree_node.html.twig' with {
                                node: axe1Node,
                                depth: 0
                            } %}
                        {% endfor %}
                    </div>
                {% endif %}

                {% if tree.independent.axe2 is not empty %}
                    <div class="ml-2 mt-2">
                        <div class="text-xs text-gray-400 px-2 py-1">{{ axe_label('axe2') }}</div>
                        {% for axe2Node in tree.independent.axe2 %}
                            {% include 'admin/axes/_tree_node.html.twig' with {
                                node: axe2Node,
                                depth: 0
                            } %}
                        {% endfor %}
                    </div>
                {% endif %}

                {% if tree.independent.axe3 is not empty %}
                    <div class="ml-2 mt-2">
                        <div class="text-xs text-gray-400 px-2 py-1">{{ axe_label('axe3') }}</div>
                        {% for axe3Node in tree.independent.axe3 %}
                            {% include 'admin/axes/_tree_node.html.twig' with {
                                node: axe3Node,
                                depth: 0
                            } %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        {% endif %}
    {% endif %}
</div>
