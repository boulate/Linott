{% extends 'base.html.twig' %}

{% block title %}Sections et axes - Administration - Linott{% endblock %}

{% block body %}
{% include 'components/_navbar.html.twig' %}

<div class="container mx-auto px-4 py-6">
    {% include 'components/_flash_messages.html.twig' %}

    <div class="mb-6">
        <a href="{{ path('app_admin') }}" class="text-sm text-gray-500 hover:text-gray-700">&larr; Administration</a>
        <h1 class="text-2xl font-bold text-gray-900">Sections et axes analytiques</h1>
    </div>

    <div class="flex gap-6">
        {# Left panel: Tree view #}
        <div class="flex-1 bg-white rounded-lg shadow">
            {# Header with search and add button #}
            <div class="px-4 py-3 border-b bg-gray-50 rounded-t-lg">
                <div class="flex items-center justify-between gap-4">
                    <div class="flex-1">
                        <div class="relative">
                            <input type="text"
                                   id="tree-search"
                                   name="q"
                                   placeholder="Rechercher..."
                                   hx-get="{{ path('app_admin_axes_search') }}"
                                   hx-trigger="input changed delay:300ms, search"
                                   hx-target="#tree-container"
                                   hx-swap="outerHTML"
                                   class="w-full pl-9 pr-4 py-2 text-sm rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
                            <svg class="w-4 h-4 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        </div>
                    </div>
                    <button type="button"
                            hx-get="{{ path('app_admin_axes_panel_new', {level: 'section'}) }}"
                            hx-target="#side-panel"
                            hx-swap="innerHTML"
                            class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Nouvelle section
                    </button>
                </div>

                {# Inheritance toggles #}
                <div class="mt-3 flex flex-wrap items-center gap-4 text-xs">
                    <span class="text-gray-500">Heritage :</span>

                    <form method="post" action="{{ path('app_admin_axes_toggle_inheritance', {level: 'axe1'}) }}" class="inline">
                        <button type="submit" class="flex items-center gap-1 px-2 py-1 rounded {{ tree.inheritance.axe1InheritsSection ? 'text-green-700 bg-green-50' : 'text-gray-500 bg-gray-100' }} hover:opacity-80 transition-opacity">
                            {% if tree.inheritance.axe1InheritsSection %}
                                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                            {% else %}
                                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/></svg>
                            {% endif %}
                            {{ axe_label('section') }} &rarr; {{ axe_label('axe1') }}
                        </button>
                    </form>

                    <form method="post" action="{{ path('app_admin_axes_toggle_inheritance', {level: 'axe2'}) }}" class="inline">
                        <button type="submit" class="flex items-center gap-1 px-2 py-1 rounded {{ tree.inheritance.axe2InheritsAxe1 ? 'text-green-700 bg-green-50' : 'text-gray-500 bg-gray-100' }} hover:opacity-80 transition-opacity">
                            {% if tree.inheritance.axe2InheritsAxe1 %}
                                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                            {% else %}
                                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/></svg>
                            {% endif %}
                            {{ axe_label('axe1') }} &rarr; {{ axe_label('axe2') }}
                        </button>
                    </form>

                    <form method="post" action="{{ path('app_admin_axes_toggle_inheritance', {level: 'axe3'}) }}" class="inline">
                        <button type="submit" class="flex items-center gap-1 px-2 py-1 rounded {{ tree.inheritance.axe3InheritsAxe2 ? 'text-green-700 bg-green-50' : 'text-gray-500 bg-gray-100' }} hover:opacity-80 transition-opacity">
                            {% if tree.inheritance.axe3InheritsAxe2 %}
                                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                            {% else %}
                                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/></svg>
                            {% endif %}
                            {{ axe_label('axe2') }} &rarr; {{ axe_label('axe3') }}
                        </button>
                    </form>
                </div>
            </div>

            {# Tree content #}
            <div class="p-2 max-h-[calc(100vh-300px)] overflow-y-auto">
                {% include 'admin/axes/_tree.html.twig' %}
            </div>
        </div>

        {# Right panel: Edit form (initially empty) #}
        <div id="side-panel" class="w-96 flex-shrink-0">
            {# Empty state #}
            <div class="bg-gray-50 rounded-lg border-2 border-dashed border-gray-200 p-8 text-center">
                <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                </svg>
                <p class="text-sm text-gray-500">Selectionnez un element pour le modifier ou cliquez sur + pour en ajouter un nouveau</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
