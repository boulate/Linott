{# Side panel for editing sections/axes #}
<div class="bg-white rounded-lg shadow">
    <div class="px-4 py-3 border-b bg-gray-50 rounded-t-lg flex items-center justify-between">
        <h3 class="font-semibold text-gray-900">
            {% if isNew %}
                {% if level == 'section' %}
                    Nouvelle section
                {% else %}
                    {{ 'Nouveau'|trans }} {{ axe_label(level)|lower }}
                {% endif %}
            {% else %}
                Modifier {{ entity.code }}
            {% endif %}
        </h3>
        <button type="button"
                onclick="document.getElementById('side-panel').innerHTML = ''"
                class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>

    <form method="post"
          action="{{ isNew ? path('app_admin_axes_save', {level: level}) : path('app_admin_axes_save', {level: level, id: entity.id}) }}"
          hx-post="{{ isNew ? path('app_admin_axes_save', {level: level}) : path('app_admin_axes_save', {level: level, id: entity.id}) }}"
          hx-target="#tree-container"
          hx-swap="outerHTML"
          hx-on::after-request="if(event.detail.successful) { document.getElementById('side-panel').innerHTML = ''; }"
          class="p-4 space-y-4">

        {# Parent selector (for axes only, when not independent) #}
        {% if level != 'section' and showParentField %}
            <div>
                <label for="parent" class="block text-sm font-medium text-gray-700 mb-1">
                    {% if level == 'axe1' %}{{ axe_label('section') }}{% elseif level == 'axe2' %}{{ axe_label('axe1') }}{% else %}{{ axe_label('axe2') }}{% endif %}
                </label>
                <select name="parent"
                        id="parent"
                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 text-sm"
                        required>
                    {% for parent in parents %}
                        <option value="{{ parent.id }}" {{ parentId == parent.id ? 'selected' : '' }}>
                            {{ parent.code }} - {{ parent.libelle }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        {% endif %}

        <div class="grid grid-cols-2 gap-4">
            <div>
                <label for="code" class="block text-sm font-medium text-gray-700 mb-1">Code</label>
                <input type="text"
                       name="code"
                       id="code"
                       value="{{ entity.code|default('') }}"
                       maxlength="20"
                       required
                       class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 text-sm font-mono">
            </div>
            <div>
                <label for="ordre" class="block text-sm font-medium text-gray-700 mb-1">Ordre</label>
                <input type="number"
                       name="ordre"
                       id="ordre"
                       value="{{ entity.ordre|default(0) }}"
                       class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 text-sm">
            </div>
        </div>

        <div>
            <label for="libelle" class="block text-sm font-medium text-gray-700 mb-1">Libelle</label>
            <input type="text"
                   name="libelle"
                   id="libelle"
                   value="{{ entity.libelle|default('') }}"
                   required
                   class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 text-sm">
        </div>

        {# Color picker for sections only #}
        {% if level == 'section' %}
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Couleur</label>
                <div class="flex flex-wrap gap-2">
                    {% for key, config in couleurs %}
                        <label class="cursor-pointer">
                            <input type="radio"
                                   name="couleur"
                                   value="{{ key }}"
                                   {{ entity.couleur|default('gray') == key ? 'checked' : '' }}
                                   class="sr-only peer">
                            <span class="block w-8 h-8 rounded-lg border-2 peer-checked:ring-2 peer-checked:ring-offset-1 peer-checked:ring-primary-500 transition-all"
                                  style="background-color: {{ config.bg }}; border-color: {{ config.border }};"
                                  title="{{ config.label }}"></span>
                        </label>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <div>
            <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox"
                       name="actif"
                       value="1"
                       {{ entity.actif|default(true) ? 'checked' : '' }}
                       class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                <span class="text-sm font-medium text-gray-700">Actif</span>
            </label>
        </div>

        {# Error messages placeholder #}
        <div id="form-errors" class="hidden">
            <div class="p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-700"></div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t">
            <div>
                {% if not isNew %}
                    <button type="button"
                            hx-post="{{ path('app_admin_axes_delete', {level: level, id: entity.id}) }}"
                            hx-target="#tree-container"
                            hx-swap="outerHTML"
                            hx-confirm="Etes-vous sur de vouloir supprimer cet element ? Cette action est irreversible."
                            hx-on::after-request="if(event.detail.successful) { document.getElementById('side-panel').innerHTML = ''; }"
                            class="text-red-600 hover:text-red-700 text-sm font-medium">
                        Supprimer
                    </button>
                {% endif %}
            </div>

            <div class="flex gap-2">
                <button type="button"
                        onclick="document.getElementById('side-panel').innerHTML = ''"
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                    Annuler
                </button>
                <button type="submit"
                        class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors">
                    {% if isNew %}Creer{% else %}Enregistrer{% endif %}
                </button>
            </div>
        </div>
    </form>
</div>
