{% extends 'base.html.twig' %}

{% block title %}Configuration - Administration - Linott{% endblock %}

{% block body %}
{% include 'components/_navbar.html.twig' %}

<div class="container mx-auto px-4 py-6">
    {% include 'components/_flash_messages.html.twig' %}

    <div class="flex items-center justify-between mb-6">
        <div>
            <a href="{{ path('app_admin') }}" class="text-sm text-gray-500 hover:text-gray-700">&larr; Administration</a>
            <h1 class="text-2xl font-bold text-gray-900">Configuration</h1>
        </div>
        <a href="{{ path('app_admin_configuration_new') }}"
           class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors">
            + Nouveau paramètre
        </a>
    </div>

    <div class="bg-white rounded-lg shadow">
        <form action="{{ path('app_admin_configuration_edit') }}" method="post" class="divide-y divide-gray-200">
            <input type="hidden" name="_token" value="{{ csrf_token('config_edit') }}">

            {% for config in configurations %}
                <div class="p-4 hover:bg-gray-50">
                    <div class="flex items-start justify-between gap-4">
                        <div class="flex-1">
                            <label for="config_{{ config.cle }}" class="block font-medium text-gray-900">
                                {{ config.cle }}
                            </label>
                            {% if config.description %}
                                <p class="text-sm text-gray-500">{{ config.description }}</p>
                            {% endif %}
                        </div>
                        <div class="flex items-center gap-2">
                            <input type="text"
                                   name="config[{{ config.cle }}]"
                                   id="config_{{ config.cle }}"
                                   value="{{ config.valeur }}"
                                   class="w-48 rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 text-sm">
                            <button type="button"
                                    onclick="document.getElementById('delete-form-{{ config.id }}').submit()"
                                    class="text-red-400 hover:text-red-600 p-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="p-8 text-center text-gray-500">
                    Aucun paramètre configuré
                </div>
            {% endfor %}

            {% if configurations|length > 0 %}
                <div class="p-4 bg-gray-50">
                    <button type="submit"
                            class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
                        Enregistrer les modifications
                    </button>
                </div>
            {% endif %}
        </form>
    </div>

    {% for config in configurations %}
    <form id="delete-form-{{ config.id }}"
          action="{{ path('app_admin_configuration_delete', {id: config.id}) }}"
          method="post"
          onsubmit="return confirm('Supprimer ce parametre ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ config.id) }}">
    </form>
    {% endfor %}
</div>
{% endblock %}
