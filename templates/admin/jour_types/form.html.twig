{% extends 'base.html.twig' %}

{% block title %}{% if isNew %}Nouveau modele partage{% else %}Modifier {{ jourType.nom }}{% endif %} - Administration - Linott{% endblock %}

{% block body %}
{% include 'components/_navbar.html.twig' %}

<div class="container mx-auto px-4 py-6">
    {% include 'components/_flash_messages.html.twig' %}

    <div class="mb-6">
        <a href="{{ path('app_admin_jour_types') }}" class="text-sm text-gray-500 hover:text-gray-700">&larr; Modeles partages</a>
        <h1 class="text-2xl font-bold text-gray-900">
            {% if isNew %}Nouveau modele partage{% else %}Modifier "{{ jourType.nom }}"{% endif %}
        </h1>
    </div>

    <div class="space-y-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}

        {# Basic information #}
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">Informations generales</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                <div>
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-input w-full'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div>
                    {{ form_label(form.ordre, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                    {{ form_widget(form.ordre, {'attr': {'class': 'form-input w-full'}}) }}
                    {{ form_errors(form.ordre) }}
                </div>
            </div>

            <div class="mb-6">
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-input w-full'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="flex items-center gap-6">
                <label class="flex items-center gap-2">
                    {{ form_widget(form.actif, {'attr': {'class': 'rounded border-gray-300 text-primary-600 focus:ring-primary-500'}}) }}
                    <span class="text-sm font-medium text-gray-700">Modele actif</span>
                </label>

                {% if form.partage is defined %}
                <label class="flex items-center gap-2">
                    {{ form_widget(form.partage, {'attr': {'class': 'rounded border-gray-300 text-primary-600 focus:ring-primary-500'}}) }}
                    <span class="text-sm font-medium text-gray-700">Partager avec tous les utilisateurs</span>
                </label>
                {% endif %}
            </div>
        </div>

        {# Periods section #}
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-medium text-gray-900">Periodes</h2>
                {% if not isNew %}
                    <button type="button"
                            hx-get="{{ path('app_admin_jour_types_periode_new', {id: jourType.id}) }}"
                            hx-target="#modal-container"
                            hx-swap="innerHTML"
                            class="text-sm text-primary-600 hover:text-primary-700 font-medium">
                        + Ajouter une periode
                    </button>
                {% endif %}
            </div>

            <div id="periodes-list">
                {% if isNew %}
                    <div class="text-center py-8 text-gray-500 bg-gray-50 rounded-lg">
                        <svg class="w-12 h-12 mx-auto text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        <p class="font-medium">Enregistrez d'abord le modele</p>
                        <p class="text-sm mt-1">Vous pourrez ensuite ajouter des periodes</p>
                    </div>
                {% else %}
                    {% include 'jour_type/_periodes_list.html.twig' with {
                        jourType: jourType,
                        periodes: jourType.periodes,
                        totalFormatted: jourType.totalFormatted,
                        editRoute: 'app_admin_jour_types_periode_edit',
                        deleteRoute: 'app_admin_jour_types_periode_delete'
                    } %}
                {% endif %}
            </div>
        </div>

        {# Actions #}
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                {% if not isNew %}
                    <form action="{{ path('app_admin_jour_types_delete', {id: jourType.id}) }}"
                          method="post"
                          onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce modele ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ jourType.id) }}">
                        <button type="submit" class="text-red-600 hover:text-red-700 text-sm font-medium">
                            Supprimer ce modele
                        </button>
                    </form>
                {% else %}
                    <div></div>
                {% endif %}

                <div class="flex gap-3">
                    <a href="{{ path('app_admin_jour_types') }}"
                       class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                        Annuler
                    </a>
                    <button type="submit"
                            class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
                        {% if isNew %}Creer le modele{% else %}Enregistrer{% endif %}
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>

{# Modal container for HTMX #}
<div id="modal-container"></div>
{% endblock %}
