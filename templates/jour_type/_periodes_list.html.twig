{# List of periods for a JourType - refreshed via HTMX #}
{% if periodes|length > 0 %}
    <div class="space-y-2">
        {% for periode in periodes %}
            <div class="flex items-center justify-between rounded-lg px-4 py-3 border transition-colors"
                 style="{{ periode.section.couleurStyle }}">
                <div class="flex items-center gap-4 flex-1">
                    <div class="font-mono font-medium">
                        {{ periode.heureDebut|date('H:i') }} - {{ periode.heureFin|date('H:i') }}
                    </div>
                    <div>
                        <span class="font-medium">{{ periode.section.libelle }}</span>
                        {% if periode.axe1 %}
                            <span class="opacity-50 mx-1">/</span>
                            <span>{{ periode.axe1.libelle }}</span>
                        {% endif %}
                        {% if periode.axe2 %}
                            <span class="opacity-50 mx-1">/</span>
                            <span>{{ periode.axe2.libelle }}</span>
                        {% endif %}
                        {% if periode.axe3 %}
                            <span class="opacity-50 mx-1">/</span>
                            <span>{{ periode.axe3.libelle }}</span>
                        {% endif %}
                    </div>
                    {% if periode.commentaire %}
                        <div class="text-sm text-gray-500 italic truncate max-w-xs">
                            {{ periode.commentaire }}
                        </div>
                    {% endif %}
                </div>
                <div class="flex items-center gap-2 ml-4">
                    <span class="text-sm font-mono text-gray-500">{{ periode.dureeFormatted }}</span>
                    <button type="button"
                            hx-get="{{ path(editRoute, {id: jourType.id, periodeId: periode.id}) }}"
                            hx-target="#modal-container"
                            hx-swap="innerHTML"
                            class="text-primary-600 hover:text-primary-700 p-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                        </svg>
                    </button>
                    <button type="button"
                            hx-delete="{{ path(deleteRoute, {id: jourType.id, periodeId: periode.id}) }}"
                            hx-target="#periodes-list"
                            hx-swap="innerHTML"
                            hx-confirm="Supprimer cette periode ?"
                            class="text-red-500 hover:text-red-700 p-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between items-center">
        <span class="text-sm text-gray-500">{{ periodes|length }} periode{{ periodes|length > 1 ? 's' : '' }}</span>
        <span class="font-mono font-medium text-gray-900">Total: {{ totalFormatted }}</span>
    </div>
{% else %}
    <div class="text-center py-8 text-gray-500">
        <p>Aucune periode. Cliquez sur "Ajouter une periode" pour commencer.</p>
    </div>
{% endif %}
